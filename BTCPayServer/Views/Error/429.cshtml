@{
    ViewData["Title"] = "429 - Too Many Requests";
}

<div class="row justify-content-center mb-2">
    <div class="col text-center">
        <a asp-controller="Home" asp-action="Index">
            <img src="~/img/poplarpay_logo_temp.svg" alt="BTCPay Server" class="mb-4" height="70" asp-append-version="true"/>
        </a>

        <h1 class="h2 mb-3">@ViewData["Title"]</h1>
    </div>
</div>

<p class="lead text-center">
    Please send requests slower!
    <br /><br />
    <a href="https://twitter.com/r0ckstardev" target="_blank">
        <img src="~/img/errorpages/429_hellomarcia.png" alt="You caused a 429!" title="Move away that cursor" asp-append-version="true" />
    </a>
    <br /><br />
    Now let's go home!
    <br /><br />
    Please <a href="/">navigate back to home</a>.
</p>

<div class="row justify-content-center mt-5">
    <div class="col">
        <partial name="_BTCPaySupporters"/>
    </div>
</div>
